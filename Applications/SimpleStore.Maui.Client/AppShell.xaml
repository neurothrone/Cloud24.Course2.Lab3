<?xml version="1.0" encoding="UTF-8"?>

<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:SimpleStore.Maui.Client.Views.Pages"
    x:Class="SimpleStore.Maui.Client.AppShell"
    FlyoutBehavior="Disabled"
    Navigated="OnNavigatedHandle"
    Title="SimpleStore">

    <TabBar>
        <ShellContent Title="Products" ContentTemplate="{DataTemplate pages:ProductsPage}" />
        <ShellContent Title="Cart" ContentTemplate="{DataTemplate pages:CartPage}" />
        <ShellContent Title="Admin" ContentTemplate="{DataTemplate pages:AdminPage}" />
        <ShellContent Title="Settings" ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </TabBar>

</Shell>